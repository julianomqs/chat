{
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES2024"
  },
  "ts-node": {
    "transpileOnly": true,
    "esm": true,
    "files": true
  },
  "include": ["src"]
}
